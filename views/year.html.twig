{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <h1>Liste des archives pour l'année {{ year }}</h1>

    <div class="paginator">
        {% for tmp in years %}
            {% if tmp == logs %}
                <span class="current">{{ tmp.getName }}</span>
            {% else %}
                <a href="{{ tmp.getUrl }}">{{ tmp.getName }}</a>
            {% endif %}
        {% endfor %}
    </div>

    {% if not logs %}
        <div class="error">
            Aucune archive disponible pour cette année
        </div>
    {% else %}
        {% for i in 1..12 %}
            {% set month =  logs.getMonth(i) %}
            {% set days = month.numberOfDays %}

            {% if month %}
                <div class="calendar">
                    <div class="title">
                        {{ month.getName }}
                    </div>

                    <div class="days">
                        {% for j in 1..days %}
                            {% set day = month.getDay(j) %}

                            {% if day %}
                                <a href="{{ day.getUrl }}" class="active">{{ j }}</a>
                            {% else %}
                                <span>{{ j }}</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}